  <style>
    .carousel {
      width: 500px;
      height: 300px;
    }
    .review-card {
      position: static;
      float: center;
      height: auto;
      width: 1000px;
      margin-top: 10px;
      margin-left: 10px;
      top: 250px;
      border: 4px solid black;
      overflow: auto;
     }
      .name {
        position: relative;
        text-align: center;
        font-weight: bolder;
        margin: 10px auto;
        height: auto;
        width: auto;
      }

      .img {
        position: relative;
        float: right;
        margin-top: 10px;
        margin-right: 10px;
        margin-bottom: 10px;
        height: auto;
        width: auto;
      }

      .review {
        position: relative;
        float: left;
        margin: 10px 10px 20px 10px;
        height: auto;
        width: 50%;
        border: 2px solid black;
        margin-bottom: 10px;
      }
      .playtime {
        float: right;
        font-weight: normal;
        margin-right: 10px;
      }
      .votes_up {
        float: left;
        font-weight: normal;
