                let img_url = response.data[i][j]["img_url"];
                let review = response.data[i][j]["Reviews"]["review"];
                let playtime =
                  response.data[i][j]["Reviews"]["playtime_at_review"];
                let review_score = response.data[i][j]["review_score"];
                let votes_funny = response.data[i][j]["Reviews"]["votes_funny"];
                let votes_up = response.data[i][j]["Reviews"]["votes_up"];
                let total_positive = response.data[i][j]["total_positive"];

