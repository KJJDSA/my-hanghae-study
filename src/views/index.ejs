    let showRecommendedGames = () => {
      $.ajax({
        type: "GET",
        url: `/analyze/best`,
        data: {},
        success: function (response) {
          if (!response) return;
          const randomArray = response.best_list.sort(() => 0.5 - Math.random())
          const array = []
          for (let i = 0; i < 3; i++) {
            array.push(randomArray[i])
          }
          let temp_html =
            ` <div class="carousel-inner">
                <div class="carousel-item active">
                  <h3 style="float: right; margin-right: 10px;">추천게임</h3>
                  <img onclick="show_reviews_appid('${array[0].appid}')" src="${array[0].img_url}" class="d-block w-100 imageblock" alt="..." >
                  <div style="text-align: center;">
                    <h3 onclick="show_reviews_appid('${array[0].appid}')" style="cursor:pointer;">${array[0].name}</h3>
                    <p>
                      장르: ${array[0].genre} /
                      리뷰 총점: ${array[0].review_score} /
                      평가: ${array[0].review_score_desc} 
                    </p>
                  </div> 
                    </div>
